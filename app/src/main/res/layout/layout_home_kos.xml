<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ivkos"
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/lbljeniskos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jenis_kos"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/lblsisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_error"
                    android:text="Sisa: 99"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    />

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="17sp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/rating_start"
                    />

                <TextView
                    android:id="@+id/lblrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:text="4.0"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/lblnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kos"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pin"
                    />

                <TextView
                    android:id="@+id/lblalamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alamat kos"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/lblfasilitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Fasilitas 1, Fasilitas 2"
                />

            <TextView
                android:id="@+id/lblharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.999,999"
                android:layout_marginEnd="20dp"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_gravity="end"
                />


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>